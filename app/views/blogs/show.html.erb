<p style="color: green"><%= notice %></p>

<div class="blog-detail">
  <h1><%= @blog.title %></h1>

  <% if @blog.image.attached? %>
    <%= image_tag url_for(@blog.image), alt: "Blog image", class: "blog-image" %>
  <% end %>

  <p><%= @blog.description %></p>

  <p><strong>Tags:</strong>
    <% @blog.tags.each do |tag| %>
      <span class="tag"><%= tag.name %></span>
    <% end %>
  </p>

</div>

<hr>

<div>
  <%= link_to "Edit this blog", edit_blog_path(@blog) %> |
  <%= link_to "Back to blogs", blogs_path %>
  <%= button_to "Destroy this blog", @blog, method: :delete, data: { confirm: "Are you sure?" } %>
</div>
